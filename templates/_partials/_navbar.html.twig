<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Navbar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .navbar-custom {
      background-color: #1e3a8a; /* Bleu personnalisé */
      color: white;
    }
    .navbar-custom .nav-link {
      color: white !important;
    }
    .navbar-custom .nav-link.active {
      color: #ffc107 !important; /* Jaune pour l'onglet actif */
      font-weight: bold;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
      <!-- Logo -->
      <a class="navbar-brand d-flex align-items-center" href="{{ path('main_index') }}">
        <img src="{{ asset('images/logo1.png') }}" alt="Logo" style="height: 60px;" class="me-2">
      </a>

      <!-- Bouton pour mobile -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <!-- Accueil -->
          <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'main_index' %}active{% endif %}" href="{{ path('main_index') }}">Accueil</a>
          </li>
          <!-- Produits -->
          <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') starts with 'produit_' %}active{% endif %}" href="{{ path('produit_index') }}">Produits</a>
          </li>
         <!-- Réparation -->
          <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'reparation_index' %}active{% endif %}" href="{{ path('reparation_index') }}">Réparation</a>
          </li>
          <!-- Rendez-vous -->
          <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'rendezvous_index' %}active{% endif %}" href="{{ path('rendezvous_index') }}">Rendez-vous</a>
          </li>
          <!-- Contact -->
          <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'aide_index' %}active{% endif %}" href="{{ path('aide_index') }}">Aide</a>
          </li> 
        </ul> 

        <!-- Connexion -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="bi bi-person-circle me-1"></i> Connexion
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
