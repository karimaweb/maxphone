{% extends 'base.html.twig' %}

{% block title %}Créer un Ticket{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="mb-4">Créer un Ticket</h2>

        {{ form_start(form) }}
        
        <div class="mb-3">
            {{ form_label(form.objetTicket, 'Objet du Ticket') }}
            {{ form_widget(form.objetTicket, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.objetTicket) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.descriptionTicket, 'Description') }}
            {{ form_widget(form.descriptionTicket, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.descriptionTicket) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.statutTicket, 'Statut') }}
            {{ form_widget(form.statutTicket, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.statutTicket) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.dateCreationTicket, 'Date de Création') }}
            {{ form_widget(form.dateCreationTicket, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateCreationTicket) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.reparation, 'Réparation associée (si applicable)') }}
            {{ form_widget(form.reparation, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.reparation) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.utilisateur, 'Utilisateur') }}
            {{ form_widget(form.utilisateur, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.utilisateur) }}
        </div>

        <button type="submit" class="btn btn-primary">Créer</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
