<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Navbar</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

		<style>

			body {
				font-size: 15px;
			}
			.navbar-custom {
				background-color: #2E5BFF; /* Bleu personnalisé */
				color: white;
				height: 80px; /* Réduction de la hauteur de la navbar */
			}
			h1,
			h2,
			h3 {
				font-family: 'Poppins', sans-serif;
				font-weight: 700;
				font-size: 40px; /* Bold */
			}
			.navbar-custom .nav-link {
				color: white;
				font-size: 1.2rem;
				padding: 5px 10px; /* Réduction de l'espace autour des liens */
			}
			.navbar-custom .nav-link.active {
				color: #ffc107; /* Jaune pour l'onglet actif */
				font-weight: bold;
			}

			.navbar-brand img {
				height: 90px; /* Augmentation de la taille du logo */
			}
			.navbar-nav .nav-link {
				margin: 0 20px; /* 10px à gauche et à droite */
			}
			.navbar-nav .nav-item {
				margin-right: 1rem; /* 1rem = environ 16px selon la taille de police */
			}
			/* Écrans inférieurs ou égaux à 768px */

			

			
			@media(max-width: 768px) {
				.navbar-custom .navbar-collapse {
					background-color: #fff;
				}
				.navbar-custom .navbar-collapse .nav-link {
					color: #000 !important;
				}
			}
			@media(max-width: 768px) {
				footer .footer-container {
					flex-direction: column;
					align-items: center;
				}
				footer .footer-container section:first-child,
				footer .footer-container section:last-child {
					display: none;
				}

				.navbar-custom .navbar-collapse {
					background-color: #fff;
				}
				.navbar-custom .navbar-collapse .nav-link {
					color: #000 !important;
				}
			}
		</style>
	</head>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

	<body>

		<nav class="navbar navbar-expand-lg navbar-custom">
			<div
				class="container-fluid">
				<!-- Logo -->
				<a class="navbar-brand d-flex align-items-center" href="{{ path('main_index') }}">
					<img src="{{ asset('images/logo2.png') }}" alt="logo2" class="me-2">
				</a>

				<!-- Bouton pour mobile/Responsive -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul
						class="navbar-nav me-auto mb-2 mb-lg-0">
						<!-- Accueil -->
						<li class="nav-item">
							<a class="nav-link {% if app.request.get('_route') == 'main_index' %}active{% endif %}" href="{{ path('main_index') }}">Accueil</a>
						</li>
						<!-- Produits -->
						<li class="nav-item">
							<a class="nav-link {% if app.request.get('_route') starts with 'produit_' %}active{% endif %}" href="{{ path('produit_index') }}">Produits</a>
						</li>
						<!-- Réparation -->
						<li class="nav-item">
							<a class="nav-link {% if app.request.get('_route') == 'reparation_index' %}active{% endif %}" href="{{ path('reparation_index') }}">Reparation</a>
						</li>
						{# <!-- Rendez-vous -->
																		            <li class="nav-item">
																		              <a class="nav-link {% if app.request.get('_route') == 'rendezvous_index' %}active{% endif %}" href="{{ path('rendezvous_index') }}"></a>
																		            </li> #}
						<!-- Calendrier -->
						<li class="nav-item">
							<a class="nav-link {% if app.request.get('_route') == 'calendar_index' %}active{% endif %}" href="{{ path('calendar_index') }}">
								Rendez-vous
							</a>
						</li>

						<!-- Contact -->
						<li class="nav-item">
							<a class="nav-link {% if app.request.get('_route') == 'ticket_create' %}active{% endif %}" href="{{ path('ticket_create') }}">Aide</a>
						</li>
					</ul>

					<!-- Connexion -->
					<ul class="navbar-nav">
						{% if app.user %}
							<!-- Affichage du nom/prénom -->
							<li class="nav-item d-flex align-items-center me-2">
								<span class="nav-link text-light d-flex align-items-center">
									<i class="bi bi-person-circle me-1"></i>
									{{ app.user.nomUtilisateur }}
									{{ app.user.prenomUtilisateur }}
								</span>
							</li>

							<!-- Icône Déconnexion -->
							<li class="nav-item">
								<a class="nav-link text-light d-flex align-items-center" href="{{ path('app_logout') }}" title="Déconnexion">
									<i class="bi bi-box-arrow-right me-1"></i>
									Déconnexion
								</a>
							</li>

						{% else %}
							<!-- Icône Connexion -->
							<li class="nav-item">
								<a class="nav-link text-light d-flex align-items-center" href="{{ path('app_login') }}" title="Connexion">
									<i class="bi bi-person-circle me-1"></i>
									Connexion
								</a>
							</li>
						{% endif %}
					</ul>

				</div>
			</div>
		</nav>


	</body>
</html>
