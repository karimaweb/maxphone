              <a class="nav-link {% if app.request.get('_route') == 'main_index' %}active{% endif %}" href="{{ path('main_index') }}">Accueil</a>
            </li>
            <!-- Produits -->
            <li class="nav-item">
              <a class="nav-link {% if app.request.get('_route') starts with 'produit_' %}active{% endif %}" href="{{ path('produit_index') }}">Produits</a>
